<body>

  {{> header}}
  <div class="container-fluid">
    <div class="row sidebar-parent">
      {{> sidebar}}
      <main class="col">
        <div class="row">
          {{> settingsCard}}
          <div class="container d-flex justify-content-center mt-4">
            <form id="add-waiter" class="w-75">
              <label class="form-label fw-semibold">Agregar mesero/a</label>
              <div class="d-flex mb-4">
                <div class="col-md-6 pe-1">
                  <label for="name" class="form-label">Nombre</label>
                  <input name="name" type="text" class="form-control">
                </div>
                <div class="col-md-6 ps-1 pe-1">
                  <label for="last-name" class="form-label">Apellido</label>
                  <input name="last-name" type="text" class="form-control">
                </div>
              </div>
              <button href="#" type="submit" class="btn btn-primary align-items-end">Agregar</button>
            </form>
          </div>
        </div>
      </main>
    </div>
  </div>

